<UserControl x:Class="YarcheTextEditor.UserControls.LoadFileControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YarcheTextEditor.UserControls"
             xmlns:controllers="clr-namespace:YarcheTextEditor.Controller" Loaded="UserControl_Loaded" Initialized="UserControl_Initialized"
             mc:Ignorable="d">

    <UserControl.DataContext>
        <controllers:ProgramController />
    </UserControl.DataContext>

    <Grid Grid.Row="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="AliceBlue" DragDrop.Drop="DropFile" AllowDrop="True">
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <Image Source="{StaticResource Download}" Width="400" Height="400" Opacity="0.4"></Image>
            <TextBlock Text="{Binding Language.DragFile}" Style="{StaticResource DragFileLabelStyle}" PreviewMouseLeftButtonUp="FileOpenClick"></TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
