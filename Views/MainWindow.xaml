<Window x:Class="YarcheTextEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YarcheTextEditor"
        mc:Ignorable="d"
        Title="YarcheTextEditor" WindowState="Maximized">

    <Grid>


        <Menu Style="{StaticResource MenuStyle}" VerticalAlignment="Top">
            <MenuItem Header="{Binding _language.File}" Style="{StaticResource TopMenuItemStyle}">
                <MenuItem Header="{Binding _language.Open}" Style="{StaticResource InsideMenuItemStyle}"></MenuItem>
                <MenuItem Header="{Binding _language.Exit}" Style="{StaticResource InsideMenuItemStyle}"></MenuItem>
            </MenuItem>
            <MenuItem Name="LanguageMenu" Header="{Binding _language.Language}" Style="{StaticResource TopMenuItemStyle}">
                <MenuItem Name="RuLanguageMenu" Header="{Binding _language.Russian}" Style="{StaticResource InsideMenuItemStyle}" Icon="{StaticResource FlagRu}" PreviewMouseLeftButtonUp="SetRussianLanguage"></MenuItem>
                <MenuItem Name="EngLanguageMenu" Header="{Binding _language.English}" Style="{StaticResource InsideMenuItemStyle}" Icon="{StaticResource FlagEng}" PreviewMouseLeftButtonUp="SetEnglishLanguage" IsChecked="True"></MenuItem>
            </MenuItem>
        </Menu>

        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <Image Source="{StaticResource Download}" Width="400" Height="400" Opacity="0.4"></Image>
            <TextBlock Text="{Binding _language.DragFile}" Style="{StaticResource DragFileLabelStyle}"></TextBlock>
        </StackPanel>
        

        
    </Grid>
</Window>
